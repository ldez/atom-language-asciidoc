key: 'preprocessor-directives'

# http://asciidoctor.org/docs/user-manual/#conditional-preprocessor-directives
patterns: [
  match: '^\\b(ifdef|ifndef|ifeval|endif)(::)(\\S*?(?:([,\\+])\\S+?)?)(\\[)(.+)?(\\])$'
  captures:
    1: name: 'entity.name.function.asciidoc'
    2: name: 'punctuation.separator.asciidoc'
    3: name: 'markup.link.asciidoc'
    4: name: 'punctuation.separator.asciidoc'
    5: name: 'markup.meta.attribute-list.asciidoc'
    6: name: 'punctuation.separator.asciidoc'
]
